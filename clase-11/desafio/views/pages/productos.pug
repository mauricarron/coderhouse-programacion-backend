doctype html
head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  title Ingreso de Productos
  meta(name='viewport' content='width=device-width, initial-scale=1')
  link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css' integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm' crossorigin='anonymous')
body.p-2
  h1 Lista de Productos
  if !listaProductos
    p.alert.alert-primary No hay productos cargados
  else
    table.table.table-borderless.table-hover.table-responsive.align-middle
        thead
        tr
            th(scope='col') Producto
            th(scope='col') Precio
            th(scope='col') Imagen
        tbody
        each producto in listaProductos
            tr
                td.align-middle=producto.title
                td.align-middle $#{producto.price}
                td.align-middle
                    img.w-25(src=producto.thumbnail alt=producto.title)